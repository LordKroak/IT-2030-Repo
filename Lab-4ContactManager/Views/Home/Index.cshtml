@model 
@{
    ViewData["Title"] = "Contact Manager";
}

<h2>Contact Manger</h2>
<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th>Phone Number</th><th>Email</th><th>Category</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit"
                       asp-route-id="@contact.ContactId"
                       asp-route-slug="@contact.Slug">Edit</a>
                    <a asp-controller="Contact" asp-action="Delete"
                       asp-route-id="@contact.ContactId"
                       asp-route-slug="@contact.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
